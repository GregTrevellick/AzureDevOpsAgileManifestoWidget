{
  "manifestVersion": 1,
  "id": "AgileManifestoWidgetId",
  "version": "0.0.1",
  "name": "The Agile Manifesto",
  "publisher": "GregTrevellick",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "description": "The agile manifesto statement for software development",
  "icons": {
    "default": "app/Images/DefaultIcon.png"
  },
  "categories": [
    "Collaborate"
  ],
  "tags": [
    "Agile",
    "Colaboration",
    "Manifesto",
    "Scrum",
    "widget"
  ],

  "links": {
    "home": {
      "uri": "https://marketplace.visualstudio.com/items?itemName=GregTrevellick.AgileManifestoWidgetId"
    },
    "repository": {
      "uri": "https://github.com/GregTrevellick/AzureDevOpsAgileManifestoWidget"
    },
    "issues": {
      "uri": "https://github.com/GregTrevellick/AzureDevOpsAgileManifestoWidget/issues"
    },
    "support": {
      "uri": "https://github.com/GregTrevellick/AzureDevOpsAgileManifestoWidget/issues"
    },
    "getstarted": {
      "uri": "https://gregtrevellick.github.io/More/"
    },
    "learn": {
      "uri": "https://gregtrevellick.github.io/More/"
    }
  },
  "screenshots": [
    {
      "path": "artefacts/Screenshot.png"
    }
  ],
  "branding": {
    "color": "rgb(1, 122, 215)",
    "theme": "dark"
  },

  "contributions": [
    {
      "id": "JSParamValue_AgileManifestoWidget",
      "type": "ms.vss-dashboards-web.widget",
      "targets": [
        "ms.vss-dashboards-web.widget-catalog"
      ],

      "properties": {
        "name": "The Agile Manifesto",
        "description": "The agile manifesto statement for software development",
        "catalogIconUrl:": "app/Images/CatalogIcon.png",
        "previewImageUrl": "app/Images/DefaultIcon.png",
        "uri": "app/dashboard-widget.html",
        // Sizes supported by your widget (first size in the array is the default)
        "supportedSizes": [
          {
            "rowSpan": 2,
            "columnSpan": 3
          },
          {
            "rowSpan": 1,
            "columnSpan": 3
          },
          {
            "rowSpan": 2,
            "columnSpan": 2
          },
          {
            "rowSpan": 1,
            "columnSpan": 1
          },
          {
            "rowSpan": 4,
            "columnSpan": 4
          }
        ],
        "supportedScopes": [ "project_team" ]
      }
    }
  ],

  "files": [
    {
      "path": "app/dashboard-widget.html",
      "addressable": true
    },
    {
      "path": "app/Content",
      "addressable": true
    },
    {
      "path": "app/Images",
      "addressable": true
    },
    {
      "path": "app/Scripts",
      "addressable": true
    }
  ],

  "content": {
    "details": {
      "path": "artefacts/Overview.md"
    },
    "license": {
      "path": "artefacts/Licence.md"
    }
  },

  "repository": {
    "type": "git",
    "uri": "https://github.com/GregTrevellick/AzureDevOpsAgileManifestoWidget"
  }
}
